BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: ''
            font_size: 48
            id: input_number
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'up'
                on_press: app.handle_increment(1)
                on_press: app.handle_convert()
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
                on_press: app.handle_convert()
    Label:
        id: output_label
        text: '0.0'
        font_size: 40
        color: (255, 255, 0, 1)


